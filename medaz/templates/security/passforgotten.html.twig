{% extends 'home/default.html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}

{% block body %}
<div class="container">
    <h1>Demande de réinitialisation de mot de passe</h1>
    {% if app.flashes('danger') %}
        <div class="alert alert-danger">
            {% for message in app.flashes('danger') %}
                {{ message }}
            {% endfor %}
        </div>
    {% endif %}
    {% if app.flashes('message') %}
        <div class="alert alert-success">
            {% for message in app.flashes('message') %}
                {{ message }}
            {% endfor %}
        </div>
    {% endif %}
    <form action="{{ path('forgot_password') }}" method="post">
        <div class="form-group">
            <label for="email">Adresse Email:</label>
            <input type="email" id="email" name="email" class="form-control" required>
        </div>
        <button type="submit" class="btn btn-primary">Envoyer la demande</button>
    </form>
</div>
{% endblock %}
