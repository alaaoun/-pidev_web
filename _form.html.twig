<style>
    .close-btn {
    position: absolute;
    top: 10px;
    right: 10px;
    border: none;
    background: transparent;
    color: #aaa;
    font-size: 24px;
    cursor: pointer;
}

.close-btn:hover {
    color: #777;
}
    .custom-alert {
        display: none;
        position: fixed;
        top: 20%;
        left: 50%;
        transform: translateX(-50%);
        z-index: 1050;
        padding: 20px;
        background: #f44336; /* Red background */
        color: white; /* White text color */
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        animation: fadeInOut 5s 1;
    }

    @keyframes fadeInOut {
        0%, 100% { opacity: 0; }
        10%, 90% { opacity: 1; }
    }
    .custom-modal {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        z-index: 1040;
        justify-content: center;
        align-items: center;
    }

    .modal-content {
        background: white;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        width: 300px;
        text-align: center;
    }

    .modal-button {
        margin-top: 20px;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        background-color: #007BFF;
        color: white;
        cursor: pointer;
    }
    .btn-cancel {
        color: white;
        background-color: #f44336; /* Red background */
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
    }

    .btn-cancel:hover {
        background-color: #d32f2f; /* Darker red on hover */
    }

    .modal-button:hover {
        background-color: #0056b3;
    }


    .hidden {
    display: none !important; // Use !important to ensure override
    }


    .modal-hidden {
        display: none;
    }

    .modal-visible {
        display: flex;
        justify-content: center;
        align-items: center;
    }
    #customModal {
        display: none;
    }
</style>


